{
    "compilerOptions": {
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react"
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "./reactjs/**/*.ts",
        "./reactjs/**/*.tsx"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "resolveGlobs": true,
        "forkChecker": true,
        "cacheDirectory": "node_modules/.awesome-typescript-loader-cache"
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": { "rewriteTsconfig": false }
}
